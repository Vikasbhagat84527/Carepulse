{
  "compilerOptions": {
    "noEmit": true, // Disables emitting of output files
    "skipLibCheck": true, // Skips type-checking for all declaration files (.d.ts)
    "noImplicitAny": false, // Suppresses warnings for variables with an implicit "any" type
    "strictNullChecks": false, // Disables strict null checks
    "suppressImplicitAnyIndexErrors": true, // Disables index signature errors
    "noUnusedLocals": false, // Disables warning for unused local variables
    "noUnusedParameters": false, // Disables warnings for unused parameters in functions
    "noImplicitReturns": false, // Disables warnings for functions with no implicit return
    "noFallthroughCasesInSwitch": false, // Disables warnings for switch fallthroughs
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
